<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Welcome to OpenShift</title>
  <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
</head>
<body>
	<div class="container"> 
		<h1>Questions</h1>    
			<form action="/quiz/<%= userid %>/submit" method="post">
			<input type="hidden" userid="<%= userid %>">
			<% for(var i=0; i < questions.length; i++) { %>
			   <div class="row">
			     <div><%= i+1 %>. <%= questions[i].text %></div>
			   </div>
			   <div class="row">
			   <% for(var j=0; j < questions[i].answers.length; j++) { %>
			   		<p>
				      <input name="<%= questions[i]._id %>" type="radio" value="<%= questions[i].answers[j]._id %>" id="<%= questions[i].answers[j]._id %>" />
				      <label for="<%= questions[i].answers[j]._id %>"><%= questions[i].answers[j].text %></label>
				    </p>
			   <% } %>
			   </div>
			<% } %>
			<div class="row">
        		<button class="waves-effect waves-light btn" id="form-submit">Submit</button>
        	</div>
			</form>
      </div>
	
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
</body>
</html>
